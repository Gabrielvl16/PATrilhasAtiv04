using System;

namespace b
{
	class Program
	{
		public static void Main()
		{
			// Recebendo valor do úsuario
			Console.WriteLine("Você deseja comprar um produto?");
			string simProduto = Console.ReadLine().ToLower();
			
			// Conferindo se o úsuario deseja ou não comprar um produto
			if (simProduto == "sim" || simProduto == "s")
			{
				Console.WriteLine("Obrigado pela compra!");
			}
			else
			{
				Console.WriteLine("Tudo bem!");
			}
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
