using System;

namespace c
{
	class Program
	{
		public static void Main(string[] args)
		{
			// Recebendo dados do úsuario
			Console.WriteLine("Você deseja comprar um carro novo? ");
			string simCaronovo = Console.ReadLine().ToLower();
			
			Console.WriteLine("Você tem dinheiro suficiente para isso?");
			string simDinheiro = Console.ReadLine().ToLower();
			
			// Conferindo se os dados são verdadeiros ou falsos
			if (simCaronovo == "sim" && simDinheiro == "sim")
			{
				Console.WriteLine("Parabéns, você pode comprar um carro novo!");
			}
			else 
			{
				Console.WriteLine("Você não pode comprar um carro novo!");
			}
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
