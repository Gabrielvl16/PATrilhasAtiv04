using System;

namespace b
{
	class Program
	{
		public static void Main()
		{
			// Recebendo palavra do úsuario
			Console.WriteLine("Digite uma palavra:");
			string palavra = Console.ReadLine();
			
			// Conferindo se a palavra esta vazia ou não 
			if (!string.IsNullOrEmpty(palavra))
			{
				Console.WriteLine("Sua palavra não está vazia!");
			}
			else
			{
				Console.WriteLine("Sua palavra está vazia!");
			}
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
