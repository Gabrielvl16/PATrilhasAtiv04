using System;

namespace b
{
	class Program
	{
		public static void Main()
		{
			// Recebendo resposta do úsuario
			Console.WriteLine("Deseja cancelar uma operação?:");
			string cancelamento = Console.ReadLine().ToLower();
			
			// Conferindo se úsuario deseja cancelar operção ou não
			if (cancelamento == "sim")
			{
				Console.WriteLine("Cancelando operação!");
			}
			else
			{
				Console.WriteLine("Porfavor, confirme o cancelamento da operação.");
			}
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
